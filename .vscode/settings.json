{
	"[z80-asm-meter][z80-macroasm]": {
		"editor.insertSpaces": false,
		"editor.minimap.maxColumn": 80,
		"editor.tabSize": 8,
		"editor.rulers": [ 80 ]
	},
	"files.associations": {
		"*.makefile": "makefile",
		"makefile.*": "makefile"
	},
	"files.exclude": {
		"tniasm.out": true,
		"tniasm.sym": true,
		"tniasm.tmp": true,
		"**/*.bin": { "when": "$(basename)" },
		"**/*.chr": { "when": "$(basename)" },
		"**/*.clr": { "when": "$(basename)" },
		"**/*.hl": { "when": "$(basename)" },
		"**/*.nam": { "when": "$(basename)" },
		"**/*.spr": { "when": "$(basename)" },
		"**/*.plet5": { "when": "$(basename)" },
		"**/*.zx0": { "when": "$(basename)" },
		"**/*.zx1": { "when": "$(basename)" },
		"**/*.zx7": { "when": "$(basename)" },
	},
	"z80-asm-meter.platform": "msx",
	"z80-asm-meter.syntax": "tniasm",
	"z80-macroasm.format.baseIndent": 1,
	"z80-macroasm.format.bracketType": "square",
	"z80-macroasm.format.colonAfterLabels": true,
	"z80-macroasm.format.spaceAfterArgument": true
}
