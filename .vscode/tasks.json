{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"presentation": {
		"echo": true,
		"reveal": "never",
		"focus": false,
		"panel": "shared",
		"showReuseMessage": true,
		"clear": false
	},
	"problemMatcher": [
		"$errmatcher-tniasm",
		"$errmatcher-tniasm-preprocessor"
	],
	"tasks": [{
		"label": "make (default task)",
		"type": "shell",
		"command": "mingw32-make.exe",
		"group": {
			"kind": "build",
			"isDefault": true
		}
	}, {
		"label": "make debug build",
		"type": "shell",
		"command": "mingw32-make.exe debuggable",
		"group": "build"
	}, {
		"label": "make release build",
		"type": "shell",
		"command": "mingw32-make.exe clean compile",
		"group": "build"
	}, {
		"label": "make & run",
		"type": "shell",
		"command": "mingw32-make.exe run",
		"group": {
			"kind": "test",
			"isDefault": true
		}
	}]
}
